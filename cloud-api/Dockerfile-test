FROM python:3.11-slim

WORKDIR /app

# Copy requirements
COPY requirements-test.txt .

# Install dependencies
RUN pip install --no-cache-dir -r requirements-test.txt

# Copy app
COPY test_api.py .

# Expose port
EXPOSE 8000

# Run the app
CMD ["uvicorn", "test_api:app", "--host", "0.0.0.0", "--port", "8000"]
