# ========================================
# VWAP Bounce Bot - Configuration
# ========================================
# Copy this file to .env and customize for your setup

# ========================================
# BROKER CREDENTIALS
# ========================================
# Get your API token from TopStep dashboard
TOPSTEP_API_TOKEN=your_api_token_here
TOPSTEP_USERNAME=your_username_here

# ========================================
# TRADING MODE
# ========================================
# Set to 'development' for paper trading, 'production' for live trading
BOT_ENVIRONMENT=development

# Dry run mode (true = paper trading, false = live trading)
BOT_DRY_RUN=true

# REQUIRED for live trading - prevents accidental live execution
# Set to 1 only when you're ready to trade with real money
CONFIRM_LIVE_TRADING=0

# ========================================
# INSTRUMENT & MARKET SETTINGS
# ========================================
BOT_INSTRUMENT=ES
BOT_TIMEZONE=America/New_York

# Instrument Specifications (ES - E-mini S&P 500)
BOT_TICK_SIZE=0.25
BOT_TICK_VALUE=12.50

# For MES (Micro E-mini), use these instead:
# BOT_INSTRUMENT=MES
# BOT_TICK_SIZE=0.25
# BOT_TICK_VALUE=1.25

# ========================================
# RISK MANAGEMENT
# ========================================
# Risk per trade as decimal (0.001 = 0.1% of account)
BOT_RISK_PER_TRADE=0.001

# Maximum contracts per trade
BOT_MAX_CONTRACTS=2

# Maximum trades allowed per day
BOT_MAX_TRADES_PER_DAY=5

# Daily loss limit in dollars (stops trading when reached)
BOT_DAILY_LOSS_LIMIT=400.0

# Maximum drawdown percentage (5.0 = 5%)
BOT_MAX_DRAWDOWN_PERCENT=5.0

# Risk/Reward ratio (1.5 = 1.5:1)
BOT_RISK_REWARD_RATIO=1.5

# ========================================
# COST MODELING (for backtesting)
# ========================================
# Slippage in ticks per fill (entry + exit)
BOT_SLIPPAGE_TICKS=1.5

# Commission per contract (round-turn)
BOT_COMMISSION_PER_CONTRACT=2.50

# ========================================
# STRATEGY PARAMETERS
# ========================================
# VWAP standard deviation bands (comma separated)
# Example: 1.0,2.0 creates bands at 1σ and 2σ
BOT_VWAP_BANDS=1.0,2.0

# Trend filter EMA period (on 15-minute bars)
BOT_TREND_EMA_PERIOD=50

# VWAP calculation timeframe (in minutes)
BOT_VWAP_TIMEFRAME=1

# Maximum bars to store in memory
BOT_MAX_BARS=200

# ========================================
# LOGGING & MONITORING
# ========================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
BOT_LOG_LEVEL=INFO

# Health check HTTP port (for monitoring)
BOT_HEALTH_CHECK_PORT=8080

# Enable health check server
BOT_ENABLE_HEALTH_CHECK=true

# ========================================
# BACKTESTING SETTINGS
# ========================================
# Initial equity for backtesting
BOT_INITIAL_EQUITY=25000.0

# Data path for historical data
BOT_DATA_PATH=./historical_data

# ========================================
# SAFETY SETTINGS (Production)
# ========================================
# When BOT_ENVIRONMENT=production, use these conservative settings:
# BOT_DRY_RUN=false
# CONFIRM_LIVE_TRADING=1
# BOT_DAILY_LOSS_LIMIT=400.0 (conservative, TopStep limit is $1000)
# BOT_MAX_CONTRACTS=2
# BOT_MAX_TRADES_PER_DAY=3
# BOT_RISK_PER_TRADE=0.001 (0.1% risk)
